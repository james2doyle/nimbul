@import "__variables.styl"

// make button mixin
makeButton(btnColor, btnBackground)
  color: btnColor
  background: btnBackground
  if BUTTON_BORDERS
    border: 1px solid btnBackground
  else
    border: none
  if BUTTON_TRANSITION
    transition: all TRANSITION ease
  if BUTTON_BOX_SHADOW
    box-shadow: inset BUTTON_SHADOW_SIZE lighten(btnBackground, GLOSS), BUTTON_SHADOW_SIZE darken(btnBackground, GLOSS)
  if BUTTON_TEXT_SHADOW
    text-shadow: BUTTON_SHADOW_SIZE darken(btnBackground, GLOSS)
  &:hover
    color: @color
    if BUTTON_BORDERS
      border: 1px solid darken(btnBackground, GLOSS)
    background: darken(btnBackground, GLOSS/2)
  &:focus
    if BUTTON_BORDERS
      border: 1px solid lighten(btnBackground, GLOSS)
    background: lighten(btnBackground, GLOSS/2)
  &:active
    background: darken(btnBackground, GLOSS)
    if BUTTON_BORDERS
      border: 1px solid darken(btnBackground, GLOSS)
    if BUTTON_TEXT_SHADOW
      text-shadow: BUTTON_SHADOW_SIZE darken(btnBackground, GLOSS*2)
    if BUTTON_BOX_SHADOW
      box-shadow: inset 0 1px 7px darken(btnBackground, GLOSS*2), BUTTON_SHADOW_SIZE darken(btnBackground, GLOSS*2)

.button
  user-select: none
  display: inline-block
  padding: BUTTON_PADDING
  margin: 0 0 0.2em 0
  text-align: center
  font-weight: BUTTON_FONT_WEIGHT
  font-family: BUTTON_FONT_FAMILY
  outline: 0
  -webkit-font-smoothing: FONT_SMOOTHING
  border-radius: ROUNDED
  line-height: BODY_LINEHEIGHT
  makeButton(WHITE, BUTTON_DEFAULT_COLOR)
  &.large
    font-size: 1.5em
  &.small
    font-size: 0.75em
  &.primary
    makeButton(WHITE, PRIMARY)
  &.secondary
    makeButton(WHITE, SECONDARY)
  &.accent
    makeButton(WHITE, ACCENT)
  &.light
    makeButton(BUTTON_LIGHT_TEXT, LIGHT)
  &.dark
    makeButton(WHITE, DARK)
  .icon
    margin-right: 0.5em





