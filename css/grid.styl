@import "__variables.styl"

// TOAST CSS GRID

.container
  max-width: CONTAINER_WIDTH
  margin: CONTAINER_MARGIN
  padding: 0 30px
  padding: 0 1.5rem

.grid
  margin-left: -3%
  max-width: 105%

.unit
  display: inline-block
  *display: inline
  *zoom: 1
  vertical-align: top
  margin: 0 -0.25em GRID_BOTTOM_MARGIN 3%
  padding: GRID_PADDING
  /* Clearfix */
  overflow: hidden
  *overflow: visible

.span-grid
  width: 97%

.one-of-two
  width: 47%

.one-of-three
  width: 30.36%

.two-of-three
  width: 63.666666666%

.one-of-four
  width: 22.05%

.three-of-four
  width: 72%

.one-of-five
  width: 17.07%

.two-of-five
  width: 37%

.three-of-five
  width: 57%

.four-of-five
  width: 77%

// small screen grid
@media GRID_BREAK
  .grid
    margin-left: 0
    max-width: none

  .unit
    overflow: visible
    width: auto !important
    margin-left: 0
    display: block